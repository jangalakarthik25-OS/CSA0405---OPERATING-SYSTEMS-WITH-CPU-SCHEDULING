#include <stdio.h>
#include <sys/ipc.h>
#include <sys/shm.h>
#include <sys/types.h>
#include <string.h>

int main() {
    int shmid;
    char *str;
    key_t key = 1234;

    shmid = shmget(key, 1024, 0666 | IPC_CREAT);
    str = (char*) shmat(shmid, (void*)0, 0);

    printf("Write data: ");
    fgets(str, 100, stdin);

    printf("Data written in memory: %s\n", str);

    shmdt(str);

    return 0;
}

OUTPUT : 
Write data: Hello OS Lab
Data written in memory: Hello OS Lab
