#include <stdio.h>
#include <stdlib.h>
#include <pthread.h>
#include <unistd.h>  
void* print_numbers(void* arg) {
    for (int i = 1; i <= 5; i++) {
        printf("Thread 1: Number %d\n", i);
        sleep(1); 
    }
    return NULL;
}
void* print_letters(void* arg) {
    for (char c = 'A'; c <= 'E'; c++) {
        printf("Thread 2: Letter %c\n", c);
        sleep(1);
    }
    return NULL;
}
int main() {
    pthread_t t1, t2;
    if (pthread_create(&t1, NULL, print_numbers, NULL) != 0) {
        perror("Failed to create thread 1");
        exit(1);
    }
    if (pthread_create(&t2, NULL, print_letters, NULL) != 0) {
        perror("Failed to create thread 2");
        exit(1);
    }
    pthread_join(t1, NULL);
    pthread_join(t2, NULL);
    printf("Both threads finished execution.\n");
    return 0;
}

OUTPUT : 
Thread 2: Letter A
Thread 1: Number 1
Thread 1: Number 2
Thread 2: Letter B
Thread 1: Number 3
Thread 2: Letter C
Thread 1: Number 4
Thread 2: Letter D
Thread 2: Letter E
Thread 1: Number 5
Both threads finished execution.


OUTPUT : 
