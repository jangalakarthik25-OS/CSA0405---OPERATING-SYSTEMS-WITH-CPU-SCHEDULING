#include <stdio.h>
#include <sys/ipc.h>
#include <sys/msg.h>
#include <string.h>

struct msg_buffer {
    long msg_type;
    char msg_text[100];
} message;

int main() {
    key_t key;
    int msgid;

    key = ftok("progfile", 65);
    msgid = msgget(key, 0666 | IPC_CREAT);

    printf("Write data: ");
    fgets(message.msg_text, 100, stdin);
    message.msg_type = 1;

    msgsnd(msgid, &message, sizeof(message), 0);
    printf("Message Sent: %s\n", message.msg_text);

    return 0;
}

OUTPUT : 
Write data: Operating Systems IPC
Message Sent: Operating Systems IPC

